<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseForest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/atrakction_info"
    tools:context="${relativePackage}.${activityClass}" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                 />

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exit"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/border"
                android:layout_marginBottom="20dp"
                android:paddingBottom="00dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="Czeka rzeka"
                        android:textSize="44sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:lineSpacingExtra="2dp"
                           android:layout_marginBottom="8dp"
                        android:text="        Pomiechówek usytuowany jest w bezpośrednim sąsiedztwie malowniczego zbiegu dwóch wielkich rzek – Wisły i Narwi. Jednak jego główną atrakcją pozostaje spokojna i czysta Wkra, prawy dopływ Narwi. Tereny te stanowią nieskończony rezerwuar pomysłów na spędzanie wolnego czasu – począwszy od leśnych spacerów, poprzez letnie kąpiele i wylegiwanie się na pomiechowskiej plaży, a skończywszy na wędkowaniu."
                        android:textSize="19sp" />

                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
