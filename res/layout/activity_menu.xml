<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_menu_about"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_about" />

        <ImageView
            android:id="@+id/button_menu_info"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_info" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_menu_monuments"
        android:layout_width="90dp"
        android:layout_height="90dp"
               android:layout_marginTop="10dp"
        android:layout_below="@+id/button_menu_plener"
        android:layout_alignLeft="@+id/button_menu_plener"
        android:src="@drawable/menu_monuments" />

    <ImageView
        android:id="@+id/button_menu_plener"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/button_menu_river"
        android:layout_below="@+id/button_menu_river"
        android:src="@drawable/menu_plener" />

    <ImageView
        android:id="@+id/button_menu_line"
        android:layout_width="90dp"
        android:layout_height="90dp"
                android:layout_marginTop="10dp"
        android:layout_above="@+id/button_menu_monuments"
        android:layout_alignLeft="@+id/button_menu_forest"
        android:src="@drawable/menu_line" />

    <ImageView
        android:id="@+id/button_menu_nothing"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/button_menu_golf"
        android:layout_alignTop="@+id/button_menu_line"
        android:src="@drawable/menu_nothing" />

    <ImageView
        android:id="@+id/button_menu_winter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/button_menu_nothing"
        android:layout_alignTop="@+id/button_menu_road"
        android:src="@drawable/menu_winter" />
    
    <FrameLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
 
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:maxWidth="180dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp"
                 android:layout_alignParentLeft="true"
            android:src="@drawable/menu_game" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentRight="true" >

        <ImageView
            android:id="@+id/mapbutton"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:maxWidth="170dp"
             android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_map" />
    </FrameLayout>

    <ImageView
        android:id="@+id/button_menu_road"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/button_menu_line"
        android:layout_alignTop="@+id/button_menu_monuments"
        android:src="@drawable/menu_road" />

    <ImageView
        android:id="@+id/button_menu_forest"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/button_menu_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/menu_forest" />

    <ImageView
        android:id="@+id/button_menu_golf"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/button_menu_line"
        android:layout_toRightOf="@+id/button_menu_forest"
        android:src="@drawable/menu_golf" />

    <ImageView
        android:id="@+id/button_menu_river"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/button_menu_forest"
        android:src="@drawable/menu_river" />

</RelativeLayout>